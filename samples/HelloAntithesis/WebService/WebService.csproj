<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>

        <!-- Retain calls to Assert, Catalog, and Lifecycle; all of which are decorated with ConditionalAttribute. -->
        <DefineConstants>$(DefineConstants);ANTITHESIS</DefineConstants>

        <!-- Allow us to view in "obj" the source generated by Antithesis.SDK.SourceGenerator. -->
        <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Antithesis.SDK" Version="0.1.36-alpha" />
        <PackageReference Include="Antithesis.SDK.SourceGenerator" Version="0.1.36-alpha" />
    </ItemGroup>

</Project>